<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.staff.mapper.StaffMapper">
    <insert id="insertStaff" parameterType="com.example.staff.model.StaffPo">
        INSERT INTO staff
        (id, name, salary, gmt_register)
        VALUES(#{id},#{name},#{salary},#{gmtRegister});
    </insert>
    <select id="getStaffByPrimaryKey" resultType="com.example.staff.model.StaffPo" parameterType="java.lang.Long">
        SELECT * FROM staff where id=#{id};
    </select>
    <delete id="delStaffByPrimaryKey">
        DELETE FROM staff where id=#{id};
    </delete>
    <update id="updateStaffByExample">
        UPDATE staff
        <set>
            <if test="name!=null">
                name=#{name},
            </if>
            <if test="salary!=null">
                salary=#{salary},
            </if>
            <if test="gmtModified!=null">
                gmt_modified=#{gmtModified},
            </if>
        </set>
        where id=#{id}
    </update>
</mapper>
